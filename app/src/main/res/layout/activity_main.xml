                android:id="@+id/bt6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#13dc23"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/bt7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#cd12d1"

                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/bt8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#ccc"
                android:layout_margin="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/bt9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#CC0033"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/bt10"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#13dc23"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/bt11"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#cd12d1"

                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/bt12"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#ccc"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/bt13"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#CC0033"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/bt14"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#13dc23"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/bt15"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#cd12d1"

                android:layout_margin="10dp"/>
